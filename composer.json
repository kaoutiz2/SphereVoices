{
    "name": "spherevoices/site",
    "description": "Site d'information SphereVoices - Plateforme média moderne inspirée de CNN",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Gast Bryan",
            "email": "contact@spherevoices.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "composer/installers": "^2.0",
        "drupal/core-composer-scaffold": "^10.0",
        "drupal/core-project-message": "^10.0",
        "drupal/core-recommended": "^10.0",
        "drush/drush": "^12.0",
        "drupal/admin_toolbar": "^3.0",
        "drupal/devel": "^5.0",
        "drupal/pathauto": "^1.0",
        "drupal/token": "^1.0",
        "drupal/metatag": "^1.0",
        "drupal/paragraphs": "^1.0",
        "drupal/entity_reference_revisions": "^1.0",
        "drupal/ctools": "^4.0",
        "drupal/scheduler": "^2.0",
        "drupal/redirect": "^1.0",
        "drupal/simple_sitemap": "^4.0",
        "drupal/webform": "^6.0"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require-dev": {
        "drupal/core-dev": "^10.0"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "drupal/core-composer-scaffold": true,
            "drupal/core-project-message": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true,
            "tbachert/spi": true
        }
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "www/"
            }
        },
        "installer-paths": {
            "www/core": ["type:drupal-core"],
            "www/libraries/{$name}": ["type:drupal-library"],
            "www/modules/contrib/{$name}": ["type:drupal-module"],
            "www/themes/contrib/{$name}": ["type:drupal-theme"],
            "www/profiles/contrib/{$name}": ["type:drupal-profile"],
            "www/themes/custom/{$name}": ["type:drupal-custom-theme"],
            "www/modules/custom/{$name}": ["type:drupal-custom-module"]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "Drupal\\Core\\Composer\\Composer::ensureHtaccess"
        ],
        "post-update-cmd": [
            "Drupal\\Core\\Composer\\Composer::ensureHtaccess"
        ]
    }
}
