/**
 * Implements hook_help().
 */
function spherevoices_core_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.spherevoices_core':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Module principal pour les fonctionnalités spécifiques à SphereVoices.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_entity_presave().
 */
function spherevoices_core_entity_presave(\Drupal\Core\Entity\EntityInterface $entity) {
  // Vérifier si c'est un nœud de type article.
  if ($entity->getEntityTypeId() === 'node' && $entity->bundle() === 'article') {
    /** @var \Drupal\node\NodeInterface $entity */
    
    // Vérifier si le nœud est en train d'être épinglé.
    if ($entity->isSticky()) {
      // Récupérer tous les autres articles épinglés (sauf celui en cours de sauvegarde).
      $storage = \Drupal::entityTypeManager()->getStorage('node');
      $query = $storage->getQuery()
        ->accessCheck(FALSE)
        ->condition('type', 'article')
        ->condition('sticky', NodeInterface::STICKY);
      
      // Si ce n'est pas un nouveau nœud, exclure celui en cours de sauvegarde.
      if (!$entity->isNew() && $entity->id()) {
        $query->condition('nid', $entity->id(), '<>');
      }
      
      $nids = $query->execute();
      
      // Désépingler tous les autres articles.
      if (!empty($nids)) {
        $nodes = $storage->loadMultiple($nids);
        foreach ($nodes as $node) {
          $node->setSticky(NodeInterface::NOT_STICKY);
          $node->save();
        }
      }
    }
  }
}

/**
 * Implements hook_entity_insert().
 * 
 * Génère automatiquement l'image du style "wide" et invalide le cache de la page d'accueil
 * lors de la création d'un article.
 */
function spherevoices_core_entity_insert(\Drupal\Core\Entity\EntityInterface $entity) {
  if ($entity->getEntityTypeId() === 'node' && $entity->bundle() === 'article') {
    /** @var \Drupal\node\NodeInterface $entity */
    
    // Générer l'image wide si nécessaire
    _spherevoices_core_generate_wide_image($entity);
    
    // Si l'article est promu en page d'accueil, vider le cache
    if ($entity->isPromoted()) {
      _spherevoices_core_invalidate_homepage_cache();
    }
  }
}

/**
 * Implements hook_entity_update().
 * 
 * Génère automatiquement l'image du style "wide" et invalide le cache de la page d'accueil
 * lors de la mise à jour d'un article.
 */
function spherevoices_core_entity_update(\Drupal\Core\Entity\EntityInterface $entity) {
  if ($entity->getEntityTypeId() === 'node' && $entity->bundle() === 'article') {
    /** @var \Drupal\node\NodeInterface $entity */
    
    // Générer l'image wide si nécessaire
    _spherevoices_core_generate_wide_image($entity);
    
    // Si l'article est promu en page d'accueil, vider le cache
    if ($entity->isPromoted()) {
      _spherevoices_core_invalidate_homepage_cache();
    }
  }
}

/**
 * Invalide le cache de la page d'accueil.
 */
function _spherevoices_core_invalidate_homepage_cache() {
  // Invalider le cache de la page d'accueil
  \Drupal::service('cache_tags.invalidator')->invalidateTags(['config:system.site']);
  
  // Invalider aussi le cache de rendu pour la route front
  $cache = \Drupal::cache('render');
  $cache->invalidateAll();
  
  // Invalider le cache de page pour la page d'accueil
  $page_cache = \Drupal::cache('page');
  $page_cache->invalidateAll();
}

/**
 * Génère l'image du style "wide" pour un article.
 * 
 * @param \Drupal\node\NodeInterface $node
 *   Le nœud article.
 */
function _spherevoices_core_generate_wide_image(NodeInterface $node) {
  // Vérifier si l'article a une image
  if (!$node->hasField('field_image') || $node->get('field_image')->isEmpty()) {
    return;
  }

  // Charger le style d'image "wide"
  $style = \Drupal::entityTypeManager()->getStorage('image_style')->load('wide');
  if (!$style) {
    return;
  }

  // Récupérer l'image
  $image = $node->get('field_image')->entity;
  if (!$image) {
    return;
  }

  $uri = $image->getFileUri();
  if (!file_exists($uri)) {
    return;
  }

  try {
    $derivative_uri = $style->buildUri($uri);
    // Générer le fichier dérivé s'il n'existe pas déjà
    if (!file_exists($derivative_uri)) {
      $style->createDerivative($uri, $derivative_uri);
      \Drupal::logger('spherevoices_core')->info('Image wide générée pour l\'article @title', [
        '@title' => $node->getTitle(),
      ]);
    }
  }
  catch (\Exception $e) {
    // Logger l'erreur mais ne pas bloquer la sauvegarde
    \Drupal::logger('spherevoices_core')->error('Erreur lors de la génération de l\'image wide pour l\'article @title: @message', [
      '@title' => $node->getTitle(),
      '@message' => $e->getMessage(),
    ]);
  }
}

/**
 * Implements hook_file_insert().
 * 
 * Génère automatiquement les thumbnails pour les images uploadées.
 */
function spherevoices_core_file_insert(FileInterface $file) {
  // Vérifier si c'est une image
  $mime_type = $file->getMimeType();
  if (strpos($mime_type, 'image/') !== 0) {
    return;
  }

  // Charger le style d'image thumbnail
  $style = \Drupal::entityTypeManager()->getStorage('image_style')->load('thumbnail');
  if (!$style) {
    return;
  }

  // Générer le thumbnail
  $uri = $file->getFileUri();
  if (!file_exists($uri)) {
    return;
  }

  try {
    $derivative_uri = $style->buildUri($uri);
    // Générer le fichier dérivé s'il n'existe pas déjà
    if (!file_exists($derivative_uri)) {
      $style->createDerivative($uri, $derivative_uri);
    }
  }
  catch (\Exception $e) {
    // Logger l'erreur mais ne pas bloquer l'upload
    \Drupal::logger('spherevoices_core')->error('Erreur lors de la génération du thumbnail pour @file: @message', [
      '@file' => $file->getFilename(),
      '@message' => $e->getMessage(),
    ]);
  }
}

/**
 * Implements hook_entity_field_access().
 * 
 * Permet aux éditeurs de contenu de modifier les champs 'promote' et 'sticky'
 * sans avoir besoin de la permission 'administer nodes'.
 */
function spherevoices_core_entity_field_access($operation, FieldDefinitionInterface $field_definition, AccountInterface $account, ?FieldItemListInterface $items = NULL) {
  // Vérifier que c'est un nœud et une opération d'édition
  if ($field_definition->getTargetEntityTypeId() !== 'node' || $operation !== 'edit') {
    return AccessResult::neutral();
  }
  
  // Champs que les éditeurs peuvent modifier
  $allowed_fields = ['promote', 'sticky'];
  $field_name = $field_definition->getName();
  
  if (!in_array($field_name, $allowed_fields, TRUE)) {
    return AccessResult::neutral();
  }
  
  // Vérifier si l'utilisateur a un rôle éditeur
  $editor_roles = ['content_editor', 'editor', 'éditeur', 'editeur'];
  $user_roles = $account->getRoles();
  
  foreach ($editor_roles as $editor_role) {
    if (in_array($editor_role, $user_roles)) {
      // L'utilisateur a un rôle éditeur, lui permettre de modifier ces champs
      return AccessResult::allowed()->cachePerPermissions()->cachePerUser();
    }
  }
  
  // Pas un éditeur, laisser le système par défaut gérer l'accès
  return AccessResult::neutral();
}

