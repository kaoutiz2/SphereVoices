{#
/**
 * @file
 * Template pour l'affichage d'un article principal (featured).
 */
#}
<article{{ attributes.addClass('article-featured') }}>
  <a href="{{ url ?: node.url }}" class="article-featured-link">
    <div class="article-featured-image-wrapper">
      {% if content.field_image and content.field_image|render|striptags|trim %}
        <div class="article-featured-image">
          {{ content.field_image }}
        </div>
      {% elseif node.field_image.value %}
        {# Fallback: accéder directement au champ si pas dans content #}
        <div class="article-featured-image">
          {% set image_file = node.field_image.entity %}
          {% if image_file %}
            {% set image_uri = image_file.uri.value %}
            <img src="{{ file_url(image_uri) }}" alt="{{ node.field_image.alt }}" />
          {% endif %}
        </div>
      {% else %}
        <div class="article-featured-image article-featured-image-placeholder">
          <div class="placeholder-content">Image</div>
        </div>
      {% endif %}
      {# Badge Breaking News si l'article est sticky (épinglé) #}
      {% if node.breaking_news_context or node.sticky.value %}
        <div class="article-featured-label">
          <span class="breaking-news-badge">BREAKING NEWS</span>
        </div>
      {% endif %}
    </div>
    <div class="article-featured-content">
      <h2 class="article-featured-title">{{ label }}</h2>
      {% if content.field_summary|render %}
        <div class="article-featured-summary">
          {{ content.field_summary }}
        </div>
      {% endif %}
      <div class="article-featured-meta">
        <span class="article-date">{{ node.created.value|date('d/m/Y') }}</span>
      </div>
    </div>
  </a>
</article>

