{#
/**
 * @file
 * Template de page de maintenance personnalis√© pour SphereVoices.
 * 
 * Affiche uniquement un message de maintenance et un lien de connexion admin.
 *
 * @see template_preprocess_maintenance_page()
 */
#}
<div class="maintenance-page-wrapper">
  <div class="maintenance-container">
    <div class="maintenance-content">
      {% if logo %}
        <div class="maintenance-logo">
          <img src="{{ logo }}" alt="{{ site_name|default('SphereVoices') }}" />
        </div>
      {% endif %}
      
      <h1 class="maintenance-title">{{ title|default('Site en maintenance'|t) }}</h1>
      
      <div class="maintenance-message">
        {{ page.content }}
      </div>
      
      <div class="maintenance-admin-link">
        <a href="/user/login" class="button button--primary">
          {{ 'Connexion administrateur'|t }}
        </a>
      </div>
    </div>
  </div>
</div>
