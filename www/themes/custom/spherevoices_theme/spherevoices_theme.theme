/**
 * Nettoie un render array en convertissant les objets attributes en tableaux.
 */
function _spherevoices_theme_clean_render_array($render_array) {
  if (!is_array($render_array)) {
    return $render_array;
  }
  
  foreach ($render_array as $key => &$value) {
    // Convertir les objets attributes en tableaux
    if (($key === '#attributes' || $key === 'attributes') && is_object($value)) {
      // Utiliser toArray() si disponible (pour les objets Attribute de Drupal)
      if (method_exists($value, 'toArray')) {
        $value = $value->toArray();
      }
      else {
        // Sinon, convertir manuellement
        $attributes_array = [];
        foreach ($value as $attr_key => $attr_value) {
          $attributes_array[$attr_key] = $attr_value;
        }
        $value = $attributes_array;
      }
    }
    // Récursion pour les tableaux imbriqués
    elseif (is_array($value)) {
      $value = _spherevoices_theme_clean_render_array($value);
    }
  }
  
  return $render_array;
}

/**
 * Implements hook_preprocess_views_view().
 * 
 * Force l'affichage des filtres exposés pour la vue agenda.
 */
function spherevoices_theme_preprocess_views_view(&$variables) {
  $view = $variables['view'];
  
  // Forcer l'affichage des filtres exposés pour la vue agenda
  if ($view->id() == 'agenda') {
    // S'assurer que les filtres exposés sont visibles
    if (isset($variables['exposed'])) {
      // Ajouter des classes CSS pour forcer l'affichage
      if (!isset($variables['exposed']['#attributes'])) {
        $variables['exposed']['#attributes'] = [];
      }
      $variables['exposed']['#attributes']['class'][] = 'agenda-filters-forced';
      $variables['exposed']['#attributes']['style'] = 'display: block !important; visibility: visible !important;';
    }
    
    // Debug: Logger si les filtres sont présents
    \Drupal::logger('spherevoices_theme')->notice('Vue agenda - Filtres exposés présents: @present', [
      '@present' => isset($variables['exposed']) ? 'OUI' : 'NON'
    ]);
  }
}

/**
 * Implements hook_preprocess_views_exposed_form().
 * 
 * Ajoute des attributs pour forcer l'affichage du formulaire exposé de l'agenda.
 */
function spherevoices_theme_preprocess_views_exposed_form(&$variables) {
  $view = $variables['view'] ?? NULL;
  
  if ($view && $view->id() == 'agenda') {
    // Forcer l'affichage du formulaire
    if (!isset($variables['attributes'])) {
      $variables['attributes'] = new Attribute();
    }
    $variables['attributes']['class'][] = 'agenda-exposed-form-forced';
    $variables['attributes']['style'] = 'display: block !important; visibility: visible !important;';
    
    \Drupal::logger('spherevoices_theme')->notice('Formulaire exposé agenda traité');
  }
}

/**
 * Implements hook_preprocess_field().
 * 
 * Force l'utilisation de l'image originale au lieu des styles d'image.
 */
function spherevoices_theme_preprocess_field(&$variables) {
  // Seulement pour le champ image des articles
  if ($variables['field_name'] === 'field_image' && $variables['element']['#bundle'] === 'article') {
    // Parcourir tous les items du champ
    foreach ($variables['items'] as $delta => $item) {
      if (isset($variables['element'][$delta]['#item'])) {
        $field_item = $variables['element'][$delta]['#item'];
        
        // Récupérer l'entité fichier
        if ($field_item && method_exists($field_item, 'get') && $field_item->get('entity')) {
          $file = $field_item->get('entity')->getValue();
          
          if ($file) {
            $uri = $file->getFileUri();
            $url = \Drupal::service('file_url_generator')->generateAbsoluteString($uri);
            $alt = $field_item->get('alt')->getValue();
            
            // Remplacer le rendu par une balise img simple
            $variables['items'][$delta]['content'] = [
              '#theme' => 'image',
              '#uri' => $uri,
              '#alt' => $alt,
              '#attributes' => [
                'loading' => 'lazy',
              ],
            ];
          }
        }
      }
    }
  }
}

/**
 * Implements hook_preprocess_image_widget().
 * 
 * Force l'utilisation de l'image originale dans le widget du formulaire (preview).
 */
function spherevoices_theme_preprocess_image_widget(&$variables) {
  // Debug: vérifier si le hook est appelé
  \Drupal::logger('spherevoices_theme')->notice('hook_preprocess_image_widget appelé');
  
  // Modifier la preview pour utiliser l'image originale
  if (!empty($variables['data']['preview'])) {
    \Drupal::logger('spherevoices_theme')->notice('Preview trouvée dans data');
    
    // Récupérer le fichier depuis l'élément
    $element = $variables['element'];
    
    if (isset($element['#files']) && !empty($element['#files'])) {
      \Drupal::logger('spherevoices_theme')->notice('Fichiers trouvés: @count', ['@count' => count($element['#files'])]);
      
      foreach ($element['#files'] as $file) {
        if ($file) {
          $uri = $file->getFileUri();
          
          // Créer l'URL absolue de l'image originale
          $url = \Drupal::service('file_url_generator')->generateAbsoluteString($uri);
          
          \Drupal::logger('spherevoices_theme')->notice('URL générée: @url', ['@url' => $url]);
          
          $alt = '';
          
          // Récupérer l'alt text si disponible
          if (isset($element['#default_value']['alt'])) {
            $alt = $element['#default_value']['alt'];
          }
          
          // Remplacer complètement la preview avec l'image originale
          // Utiliser un render array simple avec l'URL directe
          $variables['data']['preview'] = [
            '#type' => 'html_tag',
            '#tag' => 'img',
            '#attributes' => [
              'src' => $url,
              'alt' => $alt,
              'class' => ['image-widget-preview'],
              'data-drupal-selector' => 'edit-field-image-0-preview',
              'loading' => 'lazy',
            ],
          ];
          
          \Drupal::logger('spherevoices_theme')->notice('Preview remplacée avec URL: @url', ['@url' => $url]);
          
          break; // On ne traite que le premier fichier
        }
      }
    }
  }
}

/**
 * After build callback pour corriger les previews d'images.
 */
function spherevoices_theme_fix_image_preview($form, \Drupal\Core\Form\FormStateInterface $form_state) {
  // Parcourir tous les champs d'image
  foreach (\Drupal\Core\Render\Element::children($form) as $field_name) {
    if (isset($form[$field_name]['widget'])) {
      $widget = &$form[$field_name]['widget'];
      
      // Pour chaque élément du widget (en cas de champ multi-valeurs)
      foreach (\Drupal\Core\Render\Element::children($widget) as $delta) {
        if (isset($widget[$delta]['preview'])) {
          $preview = &$widget[$delta]['preview'];
          
          // Si c'est une image avec un style 'thumbnail', la remplacer par l'originale
          if (isset($preview['#theme']) && $preview['#theme'] === 'image_style') {
            if (isset($preview['#style_name']) && $preview['#style_name'] === 'thumbnail') {
              // Changer le thème pour utiliser 'image' au lieu de 'image_style'
              $preview['#theme'] = 'image';
              
              // Récupérer l'URI de l'image originale
              if (isset($preview['#uri'])) {
                $uri = $preview['#uri'];
                
                // Créer l'URL de l'image originale
                $url = \Drupal::service('file_url_generator')->generateAbsoluteString($uri);
                
                // Remplacer l'attribut src
                $preview['#uri'] = $uri;
                
                // S'assurer qu'on n'utilise pas le style
                unset($preview['#style_name']);
              }
            }
          }
        }
      }
    }
  }
  
  return $form;
}

/**
 * Implements hook_preprocess_image_style().
 * 
 * Force l'utilisation de l'image originale au lieu des styles d'image dans tous les contextes.
 */
function spherevoices_theme_preprocess_image_style(&$variables) {
  // Si c'est le style 'thumbnail' utilisé dans le widget, remplacer par l'image originale
  if (isset($variables['style_name']) && $variables['style_name'] === 'thumbnail') {
    // Remplacer le thème par 'image' simple
    $variables['theme_hook_original'] = 'image';
    // L'URI est déjà disponible dans $variables['uri']
  }
}

